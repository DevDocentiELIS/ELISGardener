<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        app:navigationIcon="@drawable/ic_logo_clean"
        app:title="ELISGardener"
        android:layout_height="wrap_content">

    </com.google.android.material.appbar.MaterialToolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvPlantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant Name"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="#2E7D32" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">



                <ImageView
                    android:id="@+id/iconType"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_flower"
                    />
                <TextView
                    android:id="@+id/tvIconType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo"
                    android:textSize="18sp" />
            </LinearLayout>

<!--            <TextView-->
<!--                android:id="@+id/tvPlantType"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Type"-->
<!--                android:textStyle="italic"-->
<!--                android:textSize="22sp"-->
<!--                android:textColor="#555" />-->

            <TextView
                android:id="@+id/tvPlantingPeriod"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:text="Planting Period"
                android:textSize="22sp" />
        </LinearLayout>



        <TextView
            android:id="@+id/tvSuggestionsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Suggestions"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tvSuggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suggestions"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvWarningsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Warnings"
            android:layout_marginTop="20dp"
            android:textColor="#B71C1C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvWarnings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Warnings"
            android:textColor="#B71C1C"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCureChecklistLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cure Checklist"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvCureChecklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cure Checklist"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvWaterNeeds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acqua"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iconWater"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvCureNeeds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cure"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iconCure"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvFragility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FragilitÃ "
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iconFragility"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvEaseOfGrowth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crescita"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iconGrowth"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

